{% extends "layout.twig" %}
{% block title %}{{ title }}{% endblock %}
{% block content %}
  <h2 class="connect-title">Mot de passe oublié</h2>

  <div class="connect-bloc">
  {% if sent %}
    <p>Si un compte existe pour cet e-mail, un lien de réinitialisation vient d’être envoyé.</p>
    <a href="/login">Retour à la connexion</a>
  {% else %}
    <form method="post" action="/mot-de-passe-oublie" class="connect-form">
      <label for="email">Votre e-mail</label>
      <input type="email" id="email" name="email" required>
      <button class="bouton-achat" type="submit">Envoyer le lien</button>
    </form>
  {% endif %}
  </div>
{% endblock %}